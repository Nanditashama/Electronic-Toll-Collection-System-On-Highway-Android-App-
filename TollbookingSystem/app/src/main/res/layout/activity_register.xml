<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EC9898"
    tools:context=".qr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            app:srcCompat="@drawable/icon" />

        <EditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="25sp"
            android:layout_marginRight="25sp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="7sp"
            android:textColor="#717171"
            android:textColorHint="#737373" />

        <EditText
            android:id="@+id/semail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="25sp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="textPersonName"
            android:padding="7sp"
            android:textColor="#717171"
            android:textColorHint="#737373" />

        <EditText
            android:id="@+id/cemailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="25sp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Confirm Email Address"
            android:inputType="textPersonName"
            android:padding="7sp"
            android:textColor="#717171"
            android:textColorHint="#737373" />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="25sp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Mobile Number"
            android:inputType="textPersonName"
            android:padding="7sp"
            android:textColor="#717171"
            android:textColorHint="#737373" />

        <EditText
            android:id="@+id/vehicleno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="25sp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Vehicle Number"
            android:inputType="textPersonName"
            android:padding="7sp"
            android:textColor="#717171"
            android:textColorHint="#737373" />

        <EditText
            android:id="@+id/drivingno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="25sp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Licence Number"
            android:inputType="textPersonName"
            android:padding="7sp"
            android:textColor="#717171"
            android:textColorHint="#737373" />

        <EditText
            android:id="@+id/rpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="25sp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="7sp"
            android:textColor="#717171"
            android:textColorHint="#737373" />

        <EditText
            android:id="@+id/rcpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="25sp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="7sp"
            android:textColor="#717171"
            android:textColorHint="#737373"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="I agree all term and conditions of RTO India"
            android:textSize="14sp" />

        <Button
            android:id="@+id/registerUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="#FFFFFF"
            android:padding="15sp"
            android:shadowColor="#393939"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="100"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#515151"
            android:textSize="30sp"
            android:textStyle="normal" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>